{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ETLFramework": "Debug"
    }
  },
  "ETLFramework": {
    "MaxConcurrentPipelines": 5,
    "DefaultTimeout": "00:30:00",
    "EnableMetrics": true,
    "MetricsInterval": "00:00:30",
    "TempDirectory": "./temp",
    "LogDirectory": "./logs"
  },
  "Playground": {
    "DefaultDataSize": "Medium",
    "EnableColorOutput": true,
    "ShowProgressBars": true,
    "AutoCleanup": true,
    "ExportDirectory": "./exports",
    "SampleDataDirectory": "./Data"
  },
  "ConnectionStrings": {
    "DefaultSQLite": "Data Source=playground.db",
    "TestSQLite": "Data Source=:memory:",
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=ETLPlayground;Trusted_Connection=true;",
    "MySQL": "Server=localhost;Database=ETLPlayground;Uid=root;Pwd=password;"
  },
  "CloudStorage": {
    "AzureBlob": {
      "ConnectionString": "",
      "ContainerName": "etl-playground"
    },
    "AwsS3": {
      "AccessKey": "",
      "SecretKey": "",
      "Region": "us-east-1",
      "BucketName": "etl-playground"
    }
  }
}
